<div class="container">
  <div class="tab" style="--i:#ffffcc">React</div>
  <div class="tab" style="--i:#ff99cc">Astro</div>
  <div class="tab" style="--i:#99ccff">Custom CSS</div>
  <div class="tab" style="--i:#99ffcc">Express</div>
  <div class="tab" style="--i:#ccff99">Tailwind</div>
</div>

<style>
  .container {
    margin: 32px 0 32px 0;
    background: rgb(30, 30, 30);
  }
  .tab {
    height: 40px;
    border-radius: 0 10px 10px 0;
    margin: 5px 0 5px 0;
    position: relative;
    display: flex;
    align-items: center;
    justify-content: start;
    padding-left: 8px;
    width: 40px;
    background-color: var(--i);
    color: var(--i);
    overflow: hidden;
    transition: all 0.7s ease;
    cursor: pointer;
  }
  .tab::after {
    content: "";
    position: absolute;
    height: 20px;
    width: 20px;
    border-top: 3px solid rgb(60, 60, 60);
    border-right: 3px solid rgb(60, 60, 60);
    border-radius: 2px;
    right: 10px;
    top: 50%;
    transform: translateY(-50%) rotate(45deg);
    transition: transform 0.7s ease;
  }
  .tab.expanded {
    width: 200px;
    color: rgb(30, 30, 30);
  }
  .tab.expanded::after {
    transform: translateY(-50%) rotate(585deg);
  }
</style>

<script>
  document.querySelectorAll(".tab").forEach((tab) => {
    tab.addEventListener("click", function () {
      this.classList.toggle("expanded");
    });
  });
</script>
