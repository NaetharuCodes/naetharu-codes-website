<div class="container">
  <ul class="squareMenu">
    <div class="squareMenuToggle">
      <ion-icon name="apps-outline"></ion-icon>
    </div>

    <li style="--i:1">
      <ion-icon name="baseball-outline"></ion-icon>
    </li>
    <li style="--i:2">
      <ion-icon name="camera-outline"></ion-icon>
    </li>
    <li style="--i:3">
      <ion-icon name="cloud-outline"></ion-icon>
    </li>
    <li style="--i:4">
      <ion-icon name="add-outline"></ion-icon>
    </li>
  </ul>
</div>

<style>
  .container {
    margin-top: 32px;
    margin-bottom: 32px;
    padding: 16px;
    box-sizing: border-box;
    background: rgb(30, 30, 30);
    display: flex;
    align-items: center;
    justify-content: start;
    min-height: 320px;
  }

  li {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    transition: 0.1s;
    cursor: pointer;
    width: 40px;
    border: 1px solid white;
    border-radius: 4px;
    padding: 4px;
  }

  li:hover {
    color: rgb(194 65 12);
    border: 1px solid rgb(194 65 12);
  }

  .squareMenu {
    position: relative;
    display: flex;
    justify-content: start;
    align-items: center;
    width: 260px;
    height: 260px;
  }

  .squareMenuToggle {
    position: absolute;
    width: 60px;
    height: 60px;
    color: white;
    display: flex;
    justify-content: center;
    align-items: center;
    z-index: 1000;
    border-radius: 50%;
    cursor: pointer;
    font-size: 2rem;
    transition: transform 0.4s;
    color: white;
  }

  .squareMenu li {
    position: absolute;
    transform-origin: 130px;
    transition: 0.4s;
    opacity: 0;
  }

  .squareMenu.active li {
    transform: translateX(calc(70px * var(--i)));
    opacity: 1;
  }

  .squareMenu.active .squareMenuToggle {
    transform: rotate(855deg);
    color: rgb(194 65 12);
  }
</style>

<script>
  console.log("running");

  let squareToggle = document.querySelector(".squareMenuToggle");
  let squareMenu = document.querySelector(".squareMenu");

  console.log(squareMenu);

  if (squareToggle) {
    console.log("inside");

    squareToggle.onclick = function () {
      console.log("toggle");
      squareMenu?.classList.toggle("active");
    };
  }
</script>

