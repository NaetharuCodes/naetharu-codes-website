---
import InfoText from "../components/InfoText.astro";
import BaseLayout from "../layouts/BaseLayout.astro";
---

<BaseLayout>
  <div
    class="min-w-full grow gird grid-cols-1 lg:h-[calc(100vh-144px)] bg-white"
  >
    <div class="h-full flex flex-col lg:flex-row relative">
      <div class="relative">
        <img
          src="https://imagedelivery.net/eg6Xqa-jIrYvZBm8oCXnhg/bcbfec27-109b-437f-00ec-0b64872e8e00/SDTall"
          alt="profile picture"
          class="object-cover h-full w-full lg:w-[800px]"
        />
        <h1 class="absolute text-white top-8 left-4 text-2xl z-10">
          Hello, I am James Bridge
        </h1>
        <div
          class="absolute top-0 left-0 right-0 bottom-0 bg-[rgba(0,0,0,0.25)]"
        >
        </div>
      </div>
      <div class="flex flex-col justify-evenly p-10 md:pl-20 z-">
        <InfoText text="Full stack web developer" />
        <InfoText
          text="Experience in Civil Engineering, Finance, and Entertainment"
        />
        <InfoText
          text="Founder and lead developer for RPG Playbook - an AI powered tool for tabletop roleplaying games"
        />
        <InfoText text="Working with business AI solutions since 2017" />
        <InfoText
          text="Experienced in Stable Diffusion including custom model training"
        />
      </div>
    </div>
  </div>
</BaseLayout>
